{% block content %}
<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container py-5 h-300">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="col-lg-12">
                            <h2>Checkout</h2>
                            {{ form_start(checkoutForm) }}

                            <!-- First Name -->
                            <div class="form-outline form-white mb-4">
                                {{ form_row(checkoutForm.firstName, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'First Name'} }) }}
                            </div>

                            <!-- Last Name -->
                            <div class="form-outline form-white mb-4">
                                {{ form_row(checkoutForm.lastName, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Last Name'} }) }}
                            </div>

                            <!-- Address -->
                            <div class="form-outline form-white mb-4">
                                {{ form_row(checkoutForm.address, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Address'} }) }}
                            </div>

                            <!-- Phone Number -->
                            <div class="form-outline form-white mb-4">
                                {{ form_row(checkoutForm.phoneNumber, { 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Phone Number'} }) }}
                            </div>

                            <!-- Payment Type -->
                            <div class="form-outline form-white mb-4">
                                {{ form_row(checkoutForm.paymentType, { 'attr': {'class': 'form-select form-select-lg mb-3', 'aria-label': '.form-select-lg example'} }) }}
                            </div>

                            <!-- Submit Button -->
                            {{ form_row(checkoutForm.submit, { 'label': 'Confirm Order', 'attr': {'class': 'btn btn-info btn-block btn-lg'} }) }}

                            {{ form_end(checkoutForm) }}

                            <div class="card bg-primary text-white rounded-3">
                                <div class="card-body">
                                    <div>
                                        <p>Total: $<span id="cart-total">{{ app.session.get('cartTotal') }}</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
