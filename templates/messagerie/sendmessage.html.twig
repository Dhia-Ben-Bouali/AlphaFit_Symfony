        padding: 8px;
        color: #495057;
        width: 100%;
    }

    /* Style pour le champ de formulaire en cas d'erreur */
    .form-control-transparent.error {
        border-color: #dc3545;
    }

    /* Animation pour attirer l'attention sur le champ en cas d'erreur */
    @keyframes shake {
        0% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        50% { transform: translateX(5px); }
        75% { transform: translateX(-5px); }
        100% { transform: translateX(0); }
    }

    /* Appliquer l'animation en cas d'erreur */
    .form-control-transparent.error {
        animation: shake 2.1s ease-in-out;
    }
</style>

