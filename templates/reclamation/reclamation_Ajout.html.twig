{# templates/reclamation/reclamation_Ajout.html.twig #}

{% extends 'base.html.twig' %}

{% block content %}
    <html lang="en">
    <!--begin::Head-->
    <head><base href="../../../"/>
        <title>Sign Up</title>

    <style>/
        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px; 
        }
        button {
            background-color: #007bff;
            border: 1px solid transparent;
            color: #fff;
            padding: .75rem 1.5rem; 
            font-size: 1.2rem;
            line-height: 1.5;
            border-radius: .25rem;
            transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
            cursor: pointer;
        }
        .div-a-masquer {
            display: none;
        }
        .my-reclamations-link {
            color: #007bff; /* Set the link color */
            text-decoration: underline; /* Add underline decoration */
            transition: color 0.3s ease; /* Smooth color transition */
        }

        .my-reclamations-link:hover {
            color: #0056b3; /* Darken the link color on hover */
        }

        .my-reclamations-link:focus {
            outline: none; /* Remove default focus outline */
        }
        .center-div {
            text-align: center;
        }
        .link-prefix {
            font-style: italic; /* Make the phrase italic */
            color: #888; /* Set the color of the phrase */
            margin-right: 5px; /* Add space between the phrase and the link */
        }
    </style>

    </head>
    <!--end::Head-->
    <!--begin::Body-->
    <body id="kt_body" class="app-blank bgi-size-cover bgi-position-center">
    <!--begin::Theme mode setup on page load-->
    <script>var defaultThemeMode = "light"; var themeMode; if ( document.documentElement ) { if ( document.documentElement.hasAttribute("data-bs-theme-mode")) { themeMode = document.documentElement.getAttribute("data-bs-theme-mode"); } else { if ( localStorage.getItem("data-bs-theme") !== null ) { themeMode = localStorage.getItem("data-bs-theme"); } else { themeMode = defaultThemeMode; } } if (themeMode === "system") { themeMode = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light"; } document.documentElement.setAttribute("data-bs-theme", themeMode); }</script>
    <!--end::Theme mode setup on page load-->
    <!--begin::Root-->
    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <!--begin::Page bg image-->
        <style>body { background-image: url('public/media/auth/bg9-dark.jpg'); } [data-bs-theme="dark"] body { background-image: url('/public/media/auth/bg9-dark.jpg'); }</style>
        <!--end::Page bg image-->
        <!--begin::Authentication - Sign-up -->
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <!--begin::Aside-->
            <div class="d-flex flex-lg-row-fluid">
                <!--begin::Content-->
                <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
                    <!--begin::Image-->
                    <img class="theme-light-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="{{ asset('media/illustrations/sigma-1/20.png')}}" alt="20.png" />
                    <img class="theme-dark-show mx-auto mw-100 w-150px w-lg-300px mb-10 mb-lg-20" src="{{ asset('media/illustrations/sigma-1/20-dark.png')}}" alt="20.png" />
                    <!--end::Image-->
                    <!--begin::Title-->
                    <h1 class="text-white fs-2qx fw-bold text-center mb-7">Your feedback matters to us. Speak up to enhance your experience</h1>
                    <!--end::Title-->
                    <!--begin::Text-->
                    <!--end::Text-->
                </div>
                <!--end::Content-->
            </div>
            <!--begin::Aside-->
            <!--begin::Body-->
            <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
                <!--begin::Wrapper-->
                <div class="bg-body d-flex flex-column flex-center rounded-4 w-md-600px p-10">
                    <!--begin::Content-->
                    <div class="d-flex flex-center flex-column align-items-stretch h-lg-100 w-md-400px">
                        <!--begin::Wrapper-->
                        <div class="d-flex flex-center flex-column-fluid pb-15 pb-lg-20">
                            <form class="form w-100" novalidate="novalidate" action="{{ path('app_reclamation') }}" method="post">
                                {{ form_start(reclamationForm,{'attr': {'novalidate': 'novalidate'}} ) }}
                                <!--begin::Heading-->
                                <div class="text-center mb-11">
                                    <!--begin::Title-->
                                    <h1 class="text-dark fw-bolder mb-3">Feedback Form</h1>
                                    <!--end::Title-->
                                </div>
                                <!--end::Heading-->

                                <!-- Fields in the same line -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        {{ form_label(reclamationForm.date, "Date De l'incident", {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(reclamationForm.date, {'attr': {'class': 'form-control', 'placeholder': 'Date', 'required': 'required'}}) }}
                                        {{ form_errors(reclamationForm.date , {'abel_attr': {'class': 'form-label'}}) }}
                                    </div>
                                    <div class="col-md-6 div-a-masquer">
                                        {{ form_label(reclamationForm.etat, 'Etat', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(reclamationForm.etat, {'attr': {'class': 'form-control', 'placeholder': 'Etat' , 'required': 'required'}}) }}
                                        <div class="error-message">{{ form_errors(reclamationForm.etat, {'abel_attr': {'class': 'form-label'}}) }}</div>
                                    </div>
                                </div>

                                <!-- Fields on the second line -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-6 div-a-masquer">
                                        {{ form_label(reclamationForm.recuser, 'Id user', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(reclamationForm.recuser, {'attr': {'class': 'form-control', 'placeholder': 'Id user' , 'required': 'required'}}) }}
                                    </div>
                                </div>

                                <!-- Fields on the third line with minimized height -->
                                <div class="row g-3 mb-4">
                                    <div class="">
                                        {{ form_label(reclamationForm.contenu, 'Contenu', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(reclamationForm.contenu, {'attr': {'class': 'form-control', 'placeholder': 'Contenu', 'rows': '5', 'required': 'required'}}) }}
                                        <div class="error-message">{{ form_errors(reclamationForm.contenu,  {'abel_attr': {'class': 'form-label'}}) }}</div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6">
                                    {{ form_end(reclamationForm) }}
                                </div>
                            <!--end::Form-->
                        </div>
                        <!--end::Wrapper-->
                        <!--begin::Footer-->
                            <div class="center-div ">
                                <!--begin::Menu link-->
                                <span class="link-prefix">Want to see your reclamation? </span>
                                <a class="my-reclamations-link" href="{{ path('app_reclamations')}}" data-kt-scroll-toggle="true" data-kt-drawer-dismiss="true">My Reclamations</a>
                                <!--end::Menu link-->
                            </div>
                        <div class="w-lg-500px d-flex flex-stack">


                        </div>
                        <!--end::Footer-->
                    </div>
                    <!--end::Content-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Body-->
        </div>
        <!--end::Authentication - Sign-up-->
    </div>
    <!--end::Root-->
    <!--begin::Javascript-->
    <script>var hostUrl = "/public/";</script>
    <!--begin::Global Javascript Bundle(mandatory for all pages)-->
    <script src="{{ asset('plugins/global/plugins.bundle.js')}}"></script>
    <script src="{{ asset('js/scripts.bundle.js')}}"></script>
    <!--end::Global Javascript Bundle-->
    <!--end::Custom Javascript-->
    <!--end::Javascript-->
    </body>
    <!--end::Body-->
    </html>

{% endblock %}














